<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f7fa"
    tools:context="com.example.dell.designapp.multiplexer.example.dell.designapp.InputAccountInfo"
    android:id="@+id/relativelayout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:id="@+id/bl"
                android:background="@color/colorPrimaryDark" />

            <at.markushi.ui.CircleButton
                android:layout_height="21dp"
                android:layout_width="23dp"
                android:layout_marginTop="5dp"
                app:cb_color="@color/colorPrimaryDark"
                android:layout_below="@id/subtitle"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/textviww"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:text="Connect Checking"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/white"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_below="@id/bl"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/texttt"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_below="@id/textviww"
                android:src="@drawable/wellsfargo"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="left"
                android:gravity="left"
                />

            <CheckBox
                android:id="@+id/checkbo"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:button="@drawable/custom_checkbox"
                android:scaleX="3"
                android:scaleY="3"
                android:layout_alignRight="@id/texttt"
                android:layout_below="@id/textviww"
                android:layout_marginRight="5dp"
                android:layout_marginTop="45dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                >
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>