<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3acfd5"
    tools:context="com.example.dell.designapp.multiplexer.example.dell.designapp.SignInOne">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="335dp"
                android:background="#557be2" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Sign in"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                tools:textColor="#ffffff" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="5dp"
                android:text="Enter your Mobile number / Email ID to sign in for petetition"
                android:textAlignment="center"
                android:textColor="#b0e0e6"
                android:textSize="17dp"
                tools:textColor="#b0e0e6" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtitle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#00bfff"
                android:hint="Eg: +91 98765 XXXXX"
                android:inputType="phone"
                android:maxLength="13"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColorHint="#b0e0e6"
                android:textColorLink="#b0e0e6"
                android:textCursorDrawable="@drawable/cursos_blue" />

            <Button
                android:id="@+id/button1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/firstName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/white_button"
                android:onClick="continuee"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#557be2"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/titletwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button1"
                android:layout_marginTop="150dp"
                android:text="Sign in with"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                tools:textColor="#ffffff" />

            <TextView
                android:id="@+id/subtitletwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titletwo"
                android:text="Lorem ipsum is simply a dummy text"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="17dp"
                tools:textColor="#b0e0e6" />


            <ImageButton
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/subtitletwo"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/white_twitter"
                android:drawableLeft="@drawable/facebook"
                android:text="Facebook"
                android:textAllCaps="false"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/subtitletwo"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/white_facebook"
                android:text="Twitter"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtitletwo"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="35dp"
                android:text="Twitter"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtitletwo"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="35dp"
                android:text="Facebook"
                android:textColor="#000000"
                android:textSize="19sp" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/subtitletwo"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/twitter" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/subtitletwo"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/facebook" />

        </RelativeLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>