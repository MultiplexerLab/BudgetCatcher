<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f7fa"
    tools:context="com.example.dell.designapp.Manage"
    android:id="@+id/relativelayout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="42dp"
                android:background="@color/colorPrimaryDark" />

            <at.markushi.ui.CircleButton
                android:layout_height="21dp"
                android:layout_width="23dp"
                android:layout_marginTop="5dp"
                app:cb_color="@color/colorPrimaryDark"
                android:layout_below="@id/subtitle"
                android:src="@drawable/ic_menu_black_24dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/textviww"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:text="Manage"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                />

            <Button
                android:id="@+id/skyblue"
                android:layout_width="360dp"
                android:layout_height="170dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:onClick="manage"
                android:background="@drawable/sky_blue_button"
                android:drawableBottom="@drawable/skyblueimg"
                />

            <Button
                android:id="@+id/lightpink"
                android:layout_width="360dp"
                android:layout_height="170dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/skyblue"
                android:background="@drawable/light_pink"
                android:drawableBottom="@drawable/pink"
                />

            <Button
                android:id="@+id/blue"
                android:layout_width="360dp"
                android:layout_height="170dp"
                android:layout_below="@id/lightpink"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bl"
                android:drawableBottom="@drawable/darkblimg"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>