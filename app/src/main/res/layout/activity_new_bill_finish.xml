<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f6f9fc"
    tools:context="com.example.dell.designapp.multiplexer.example.dell.designapp.NewBillFinish"
    android:id="@+id/relativelayout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textvieww"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:text="Cancel"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:layout_gravity="left"
                android:gravity="left"
                />

            <TextView
                android:id="@+id/textviww"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:text="New Bill"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/textviw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_below="@id/textviww"
                android:text="Name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:textColor="#9fa7b3"
                android:gravity="left"
                />

            <View
                android:layout_width="match_parent"
                android:id="@+id/list"
                android:layout_height="1dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="45dp"
                android:layout_below="@id/textviw"
                android:background="#dce6f0" />

            <TextView
                android:id="@+id/textvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_below="@id/list"
                android:text="Description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#9fa7b3"
                android:gravity="left"
                />

            <View
                android:layout_width="match_parent"
                android:id="@+id/lis"
                android:layout_height="1dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/textvi"
                android:layout_marginTop="45dp"
                android:background="#dce6f0" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_below="@id/lis"
                android:text="Monthly Payment"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#9fa7b3"
                android:gravity="left"
                />

            <SeekBar
                android:id="@+id/simpleSeekBar"
                android:layout_width="fill_parent"
                android:layout_below="@+id/amount"
                android:layout_marginTop="25dp"
                android:backgroundTint="#3acfd5"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_below="@id/simpleSeekBar"
                android:text="Date and Time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:textColor="#9fa7b3"
                android:gravity="left"
                />

            <TextView
                android:id="@+id/selectdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_below="@id/goal"
                android:text="Select Date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:textColor="#9fa7b3"
                android:gravity="left"
                />

            <Button
                android:layout_height="26dp"
                android:layout_width="26dp"
                android:id="@+id/btn_date"
                android:layout_below="@id/goal"
                android:layout_marginTop="22dp"
                android:background="#f6f9fc"
                android:text=">"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="110dp"
                />

            <TextView
                android:id="@+id/selecttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_below="@id/selectdate"
                android:text="Select Time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#9fa7b3"
                android:gravity="left"
                />

            <Button
                android:layout_height="26dp"
                android:layout_width="26dp"
                android:id="@+id/btn_time"
                android:layout_below="@id/btn_date"
                android:layout_marginTop="14dp"
                android:background="#f6f9fc"
                android:textSize="20dp"
                android:text=">"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="110dp"
                />

            <Button
                android:id="@+id/buttooo"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn_time"
                android:background="@drawable/blue_button"
                android:text="Create"
                android:onClick="createone"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="19sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>