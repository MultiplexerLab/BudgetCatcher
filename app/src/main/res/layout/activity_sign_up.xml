<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.designapp.multiplexer.example.dell.designapp.SignUp">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#557be2">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_marginTop="60dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                tools:textColor="#ffffff" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:text="Your record doesn't exist in our database. Why don't you sign up in simple 3 steps now ?"
                android:textAlignment="center"
                android:textColor="#b0e0e6"
                android:textSize="17dp"
                tools:textColor="#b0e0e6" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:hint="Phone                                      9876543210"
                android:textColorHint="#b0e0e6"
                android:backgroundTint="#00bfff"
                android:textCursorDrawable="@drawable/cursos_blue"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColorLink="#b0e0e6"
                android:maxLength="11"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:hint="Email                          eg: xxx@domain.com"
                android:textColorHint="#b0e0e6"
                android:backgroundTint="#00bfff"
                android:textCursorDrawable="@drawable/cursos_blue"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColorLink="#b0e0e6"
                android:maxLength="30"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/passs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:hint="Password                                           *******"
                android:textColorHint="#b0e0e6"
                android:backgroundTint="#00bfff"
                android:textCursorDrawable="@drawable/cursos_blue"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColorLink="#b0e0e6"
                android:maxLength="40"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:hint="Name                                           John Smith"
                android:textColorHint="#b0e0e6"
                android:backgroundTint="#00bfff"
                android:textCursorDrawable="@drawable/cursos_blue"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColorLink="#b0e0e6"
                android:maxLength="15"
                android:inputType="text"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@drawable/white_button"
                android:text="Sign Up now"
                android:onClick="signup"
                android:textAllCaps="false"
                android:textColor="#557be2"
                android:textSize="19sp" />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>